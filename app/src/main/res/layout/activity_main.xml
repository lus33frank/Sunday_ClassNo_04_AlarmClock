<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.com.frankchang.houli.sunday_classno_04_alarmclock.MainActivity"
    android:orientation="vertical"
    android:padding="@dimen/xml_padding">

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xml_textSize_60"
        android:textColor="@color/blue"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/xml_layout_marginBottom"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xml_layout_height_2"
        android:text=""
        android:background="@color/red"
        android:layout_marginBottom="@dimen/xml_layout_marginBottom"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/xml_layout_marginBottom">

            <TextView
                android:layout_width="@dimen/xml_layout_width"
                android:layout_height="wrap_content"
                android:text="@string/xml_text_01"
                android:layout_weight="2.8"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/xml_layout_width"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/xml_textSize_24"
                android:textColor="@color/green"
                android:layout_weight="4.9"
                android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/xml_layout_width"
                android:layout_height="wrap_content"
                android:text="@string/xml_btntext_01"
                android:layout_weight="2.3"
                android:onClick="setOnClick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/xml_layout_marginBottom">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="@dimen/xml_layout_width"
                android:layout_height="wrap_content"
                android:text="@string/xml_text_02"
                android:layout_weight="7.7"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="@dimen/xml_layout_width"
                android:layout_height="wrap_content"
                android:text="@string/xml_btntext_02"
                android:layout_weight="2.3"
                android:onClick="cancelOnClick"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
